<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.college.SearchActivity">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radcity"
        android:layout_marginTop="82dp"
        android:checked="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/city"
        android:layout_toStartOf="@+id/city" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radcour"
        android:checked="false"
        android:layout_below="@+id/city"
        android:layout_toLeftOf="@+id/city"
        android:layout_toStartOf="@+id/city"
        android:layout_marginTop="43dp" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/city"
        android:hint="City name.."
        android:layout_alignBaseline="@+id/radcity"
        android:layout_alignBottom="@+id/radcity"
        android:layout_alignLeft="@+id/search"
        android:layout_alignStart="@+id/search"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Course name.."
        android:id="@+id/course"
        android:layout_alignBottom="@+id/radcour"
        android:layout_toRightOf="@+id/radcour"
        android:layout_alignRight="@+id/city"
        android:layout_alignEnd="@+id/city" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/search"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/logout"
        android:src="@drawable/power_blue"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/city"
        android:layout_alignEnd="@+id/city" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/mybio"
        android:src="@drawable/my_info"
        android:layout_alignTop="@+id/logout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
